<h1 class = "text-center p-2">Lake Effect Snow Event Advanced Search</h1>

<%= form_with url: "advancedSearchResults", method: :get do |form| %>
 <div  class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :model, "Model Type", style: "display: block" %>
      <%= form.select :model, ["NAM", "RAP"], :required => true %>
    </div>

    <div class = "col">
      <%= form.label :site, "Station / Site", style: "display: block" %>
      <%= form.select :site, @sites, :required => true %>
    </div>
  </div>

  <div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :surfaceWindDirectionLow, "Surface Wind Direction", style: "display: block" %>
      <%= form.number_field :surfaceWindDirection %>
    </div>
    <div class = "col">
      <%= form.label :surfaceWindSpeed, "Surface Wind Speed", style: "display: block" %>
      <%= form.number_field :surfaceWindSpeed %>
    </div>
  </div>

  <div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :nineWindDirectionLow, "925mb Wind Direction", style: "display: block" %>
      <%= form.number_field :nineWindDirection %>
    </div>
    <div class = "col">
      <%= form.label :nineWindSpeed,  "925mb Wind Speed", style: "display: block" %>
      <%= form.number_field :nineWindSpeed %>
    </div>
  </div>

  <div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :eightWindDirectionLow, "850mb Wind Direction", style: "display: block" %>
      <%= form.number_field :eightWindDirection %>
    </div>
    <div class = "col">
      <%= form.label :eightWindSpeed, "850mb Wind Speed", style: "display: block" %>
      <%= form.number_field :eightWindSpeed %>
    </div>
  </div>

<div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :sevenWindDirectionLow, "700mb Wind Direction", style: "display: block" %>
      <%= form.number_field :sevenWindDirection %>
    </div>
    <div class = "col">
      <%= form.label :sevenWindSpeed, "700mb Wind Speed", style: "display: block" %>
      <%= form.number_field :sevenWindSpeed %>
    </div>
  </div>

  <div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :liCAPE, "Lake Induced Cape", style: "display: block" %>
      <%= form.number_field :liCAPE %>
    </div>

    <div class = "col">
      <%= form.label :liNCAPE, "Lake Induced NCape", style: "display: block" %>
      <%= form.number_field :liNCAPE %>
