    <div class = "col">
      <%= form.label :liEQL, "Lake Induced EQL", style: "display: block" %>
      <%= form.number_field :liEQL %>
    </div>
  </div> 

  <div class = "row p-2 text-center">
    <div class = "col">
      <%= form.label :sur850TempDiff, "Lake Surface to 850mb Temperature Difference", style: "display: block" %>
      <%= form.number_field :sur850TempDiff %>
    </div>

      <div class = "col">
      <%= form.label :sur700TempDiff, "Lake Surface to 700mb Temperature Difference", style: "display: block" %>
      <%= form.number_field :sur700TempDiff %>
    </div>
  </div>

    
    <%= form.submit "Search Past Events", class: "btn btn-dark text-center" %>

  
<% end %>