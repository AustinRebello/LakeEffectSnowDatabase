
<style>
  .verticaltext{
           width:1px;
           word-wrap: break-word;
           white-space:pre-wrap; 
        }
</style>

<p style="color: green"><%= notice %></p>

<h1 class="text-center">All BUFKIT Data</h1>

<div id="bufkits">
  <table id="sortTable" class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Model Type</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Station</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Time</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">10M Wind Direction</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">10M Wind Speed</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Temperature</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Dew Point</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Humidity</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Wind Direction</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Wind Speed</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">925mb Height</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Temperature</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Dew Poinnt</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Humidity</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Wind Direction</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Wind Speed</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">850mb Height</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Temperature</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Dew Point</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Humidity</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Wind Direction</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Wind Speed</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">700mb Height</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Model Cape</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Lake Induced Cape</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Lake Induced NCape</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Lake Induced EQL</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Bulk Shear</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Bulk Shear U</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Bulk Shear V</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Lk Sur - 850mb ΔT</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">Lk Sur - 700mb ΔT</th>
      <th scope="col" style="writing-mode: vertical-rl;transform: scale(-1,-1)">LESE ID</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @bufkits.each do |bufkit| %>
        <tr>
          <td><%= link_to bufkit.modelType, bufkit %></td>
          <td><%= bufkit.station %></td>
          <td><%= bufkit.date %>Z</td>
          <td><%= bufkit.tenMeterWindDirection %></td>
          <td><%= bufkit.tenMeterWindSpeed %></td>
          <td><%= bufkit.lowTemp %></td>
          <td><%= bufkit.lowDew %></td>
          <td><%= bufkit.lowHumidity %></td>
          <td><%= bufkit.lowWindDirection %></td>
          <td><%= bufkit.lowWindSpeed %></td>
          <td><%= bufkit.lowHeight %></td>
          <td><%= bufkit.medTemp %></td>
          <td><%= bufkit.medDew %></td>
          <td><%= bufkit.medHumidity %></td>
          <td><%= bufkit.medWindDirection %></td>
          <td><%= bufkit.medWindSpeed %></td>
          <td><%= bufkit.medHeight %></td>
          <td><%= bufkit.highTemp %></td>
          <td><%= bufkit.highDew %></td>
          <td><%= bufkit.highHumidity %></td>
          <td><%= bufkit.highWindDirection %></td>
          <td><%= bufkit.highWindSpeed %></td>
          <td><%= bufkit.highHeight %></td>
          <td><%= bufkit.modelCape %></td>
          <td><%= bufkit.lakeEffectCape %></td>
          <td><%= bufkit.lakeEffectNCape %></td>
          <td><%= bufkit.lakeEffectEQL %></td>
          <td><%= bufkit.bulkShear %></td>
          <td><%= bufkit.bulkShearU %></td>
          <td><%= bufkit.bulkShearV %></td>
          <td><%= bufkit.lowDeltaT %></td>
          <td><%= bufkit.highDeltaT %></td>
          <td><%= bufkit.lake_effect_snow_event_id %></td>
        </tr>

    <% end %>
  </tbody>
  </table>
</div>


<script>
  $(document).ready(function () {
    if(document.getElementById('sortTable_wrapper')==null){
      $('#sortTable').dataTable({
        paging: false,
        searching: false,
      });
      $('.dataTables_length').addClass('bs-select');
    }
  });
</script>
